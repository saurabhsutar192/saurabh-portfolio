---
import { Image } from "astro:assets";

interface Props {
  name: string;
  img: ImageMetadata;
}

const { name, img } = Astro.props;
---

<div class="skill-box">
  <div class="skill">
    <div class="img-container">
      <Image src={img} alt={name} />
    </div>
    <p>{name}</p>
  </div>
</div>

<style lang="scss">
  @use "@/styles/abstract" as *;

  .skill-box {
    cursor: pointer;
    flex: 1;
    min-width: 11rem;
    border-radius: 13rem;
    padding: 0.8rem;
    position: relative;
    z-index: 0;
    overflow: hidden;
    border: 2px solid $light-bg;
    color: $light-bg;

    .skill {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .img-container {
      height: 2.5rem;
      width: 2.5rem;
      object-fit: contain;
      background-color: white;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      img {
        height: 60%;
        width: 60%;
        object-fit: contain;
      }
    }

    p {
      font-weight: 700;
    }
  }
</style>
