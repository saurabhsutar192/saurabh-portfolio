---
import { Image } from "astro:assets";

interface ISkillProps {
  name: string;
  img: ImageMetadata;
}

const { name, img } = Astro.props as ISkillProps;
---

<div class="skill-box">
  <div class="skill">
    <Image src={img} alt={name} />
    <p>{name}</p>
  </div>
</div>

<style lang="scss">
  @use "@/styles/abstract" as *;

  .skill-box {
    cursor: pointer;
    flex: 1;
    min-width: 10rem;
    border-radius: 1rem;
    padding: 1rem;
    background: white;
    position: relative;
    z-index: 0;
    overflow: hidden;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    color: $light-text;

    .skill {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    img {
      height: 2rem;
      width: 2rem;
      object-fit: contain;
    }
    p {
      font-weight: 500;
    }
  }
</style>
