<ul class="nav-list">
  <li>
    <button data-target="#projects"> Projects </button>
  </li>
  <li>
    <button data-target="#skills"> Skills & Exp </button>
  </li>
  <li>
    <button data-target="#about"> About Me</button>
  </li>
  <li>
    <button data-target="#contact" class="contact-btn"><p>Contact</p> </button>
  </li>
</ul>

<script>
  import { parallaxAnimation } from "@/utils/animations";
  import gsap from "gsap";
  import ScrollToPlugin from "gsap/dist/ScrollToPlugin";

  gsap.registerPlugin(ScrollToPlugin);

  const navButtons = document.querySelectorAll(
    ".nav-list li button"
  ) as NodeListOf<HTMLButtonElement>;

  navButtons.forEach((button) => {
    button.addEventListener("click", (e) => {
      const section = (e.target as HTMLButtonElement)?.getAttribute(
        "data-target"
      );

      section &&
        gsap.to(window, { duration: 1, scrollTo: { y: section, x: 0 } });
    });

    const p = button.querySelector("p") as HTMLParagraphElement;

    parallaxAnimation({
      container: button,
      child: p,
      scale: 1.1,
      parallaxMultiplier: 0.3,
    });
  });
</script>
