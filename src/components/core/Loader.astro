  @use "@/styles/abstract" as *;

  .loader {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100vh;
    .dot-container {
      display: flex;
      gap: 0.5rem;
      .dot {
        background: $dark-bg;
        width: 1rem;
        height: 1rem;
        border-radius: 50%;
      }
    }

